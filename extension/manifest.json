{
  "manifest_version": 3,
  "name": "SenseiBoard Overlay (Dev)",
  "version": "0.1.3",
  "background": { "service_worker": "worker.js" },
  "permissions": ["scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*", "http://localhost:8000/*"],
  "content_scripts": [{
  "matches": ["https://*.chess.com/*", "https://chess.com/*", "https://lichess.org/*"],
  "js": ["lib/chess.min.js", "content.js"],   
  "css": ["overlay.css"],
  "run_at": "document_idle",
  "all_frames": true
}]
}
